# Managed by Puppet
[Unit]
Description=Apache SOLR
After=syslog.target network.target remote-fs.target nss-lookup.target
[Service]
PIDFile=/opt/solr/bin/solr-8983.pid
ExecStart=/opt/solr/bin/solr \
  <%- if not scope.lookupvar('solr6::example').empty? -%>
  -e <%= scope.lookupvar('solr6::example') %> \
  <%- end -%>
  <%- if not scope.lookupvar('solr6::zookeepers').empty? -%>
  -z <%= scope.lookupvar('solr6::zookeepers').join(',') %> \
  <%- end -%>
  -m <%= scope.lookupvar('solr6::memory') %> \
  -d <%= scope.lookupvar('solr6::params::data_dir') %> \
  -a "-Dsolr.log.dir=<%= scope.lookupvar('solr6::log_dir') %> <%= scope.lookupvar('solr6::extra_params') %>" \
  -noprompt
User=solr
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s QUIT $MAINPID
PrivateTmp=true
[Install]
WantedBy=multi-user.target
